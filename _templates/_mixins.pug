mixin repeat(x)
	- var n = 0
	while n < x
		- n++
		block

mixin php(uri)
	|!{ `<?php include "${uri}" ?>` }

mixin php_
	|!{ `<?php ` }
	block
	|!{ ` ?>` }

mixin css(href,media='all')
	link(rel="stylesheet" media=media href=href)&attributes(attributes)/

mixin js(src)
	script(type="text/javascript" src=src)&attributes(attributes): block

mixin img(src,alt,title)
	img(src=src alt=alt title=title)&attributes(attributes)/

mixin _
	=` `

mixin __
	=`\n`

mixin a(href,title)
	a(href=href title=title)&attributes(attributes): block

mixin _a(href,title)
	+_
	a(href=href title=title)&attributes(attributes): block

mixin la(href,title)
	li: a(href=href title=title)&attributes(attributes): block

mixin backlink(title='Back to previous page')
	a(onclick="event.preventDefault();window.history.back()" title=title)&attributes(attributes): block

mixin fas
	i._fa: i.fas&attributes(attributes)

mixin far
	i._fa: i.far&attributes(attributes)

mixin fab
	i._fa: i.fab&attributes(attributes)

mixin fat
	i._fa: i.fas&attributes(attributes): block

mixin fit
	i._fit: i.fit&attributes(attributes): block
