extends _html

block append vars
  - heading = `Ace Basic`
  - about   = `A versatile template with a clean layout.`
  - updateTitle( `Ace Basic by ${author}` )
  - updateDescription( `${about}` )
  - updateUrl( siteUrl+"index.html" )

//- block prepend views
  +pageData#_pageData._page_layout

block append style
  style.
    #_html .pages ul { list-style-type: none; padding-inline-start: 0; }
  //- style.
  include _mixins
  +fullscreenBackground
  style.
    ._fullscreen { margin-top:-10rem } #_navbar { height:10rem }
    ._fullscreen, ._view_layout { height:100% }
    ._fullscreen {
      text-align: center;
      display: flex;
      flex-direction: column;
      background-color: rgba(0,0,0,0.2);
    }

    ._fullscreen .hero { font-size:1.6em; margin:31vh auto; width:10em; padding-top:10vh; }
    ._fullscreen .hero2 { margin:2em 1em; max-width:640px; }

    @media (min-width: 540px) {
      ._fullscreen .hero { font-size:3em; }
      ._fullscreen .hero2 { margin:2em auto; }
    }

    ._footer_layout { max-width:none }
  //- style.

block header
  +header#_header._fullscreen
    h1._h1.hero #{heading}
    p #{about}

block main
  +main#_main: article

