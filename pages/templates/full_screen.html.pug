extends _template

block append vars
  include _vars
  -
    file           = 'full_screen'
    url            = url+`${file}.html`
    title          = `${file}`
    description    = `A ${file} seamlessly stretches across the entire screen, for an exceptional first impression.`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  style.
    ._header_layout,
    #_header,
    .fullscreen,
    ._view_layout { height:100% }
    ._header_layout {
      text-align: center;
      align-items: center;
      display: grid;
    }

    #_header .hero { font-size:3em; width:11em; margin:2em auto; }
    #_header .hero2 { margin:2em auto; max-width:640px; }

    @media only screen and (max-width: 499px) {
      #_header .hero { width:100%; font-size:1.4em; }
      #_header .hero2 { margin:2em 1em; }
    }

block nav

block header
  .fullscreen._bg-2-2._tc-2-2
    ._pad._bg-1-2._tc-1-2: include _nav
    +header#_header
      h1._h1.hero Full Screen Display of Awesomeness
      p #{description}

block main
  +main#_main: article._mv
    .g
      .u-1-3
        .gu: .o.o1-3
      .u-1-3
        .gu: .o.o1-3
      .u-1-3
        .gu: .o.o1-3

    .hero2._text-center 
      h2._h2 Featured Contents and Success Stories
      p Show the incredible accomplishments that are shaping your world today.

    .g
      .u-2-3
        .gu: .o.o2-3
      .u-1-3
        .gu: .o.o1-3
        .gu: .o.o1-3
    //-
