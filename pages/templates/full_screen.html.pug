extends _template

block append vars
  include _vars
  -
    file           = 'full_screen'
    url            = url+`${file}.html`
    title          = `${file}`
    description    = `A ${file} seamlessly stretches across the entire screen, for an exceptional first impression.`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  style.
    ._fullscreen { margin-top:-10rem } #_navbar { height:10rem }
    ._fullscreen, ._view_layout { height:100% }
    ._fullscreen {
      text-align: center;
      display: flex;
      flex-direction: column;
      background-color: rgba(0,0,0,0.2);
    }

    ._fullscreen .hero { font-size:1.6em; margin:31vh auto; width:10em; padding-top:10vh; }
    ._fullscreen .hero2 { margin:2em 1em; max-width:640px; }

    @media only screen and (min-width: 540px) {
      ._fullscreen .hero { font-size:3em; }
      ._fullscreen .hero2 { margin:2em auto; }
    }

  //-
  - let _nav_layout = 'clipped';
  if _nav_layout == 'autoscroll'
    style.
      #_navbar { height:10rem } #_nav { max-height: 100%; overflow-y: auto; overflow-x:hidden; }
  else if _nav_layout == 'clipped'
    style.
      ._nav_layout { height:1.6em; overflow:hidden }
  
  //-

block header
  +header#_header._fullscreen
    h1._h1.hero Full Screen Display of Awesomeness
    p #{description}

block main
  +main#_main: article._mv
    ._flex
      +repeat(3): ._fill: .gu: .o.o2-4

    .hero2._text-center 
      h2._h2 Featured Contents and Success Stories
      p Show the incredible accomplishments that are shaping your world today.

    ._flex
      ._fill
        .gu: .o.o2-3
        
      ._fill(style="max-width:20em")
        .gu: .o.o1-3
        .gu: .o.o1-3
    
    ._text-center: p._small| Some images on this website are courtesy of Matt at <a href="https://www.svgbackgrounds.com/set/free-svg-backgrounds-and-patterns/">svgbackgrounds.com</a>. Thank you for providing them for free.
    //-
