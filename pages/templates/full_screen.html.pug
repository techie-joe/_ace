extends _template

block append vars
  include _vars
  -
    file           = 'full_screen'
    url            = url+`${file}.html`
    title          = `${file}`
    description    = `A ${file} seamlessly stretches across the entire screen, for an exceptional first impression.`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  style.
    ._header_layout,
    ._view_layout,
    ._fullscreen { height:100% }

    #_nav { position:relative; z-index:1; }
    #_nav { background-color: rgba(100, 100, 100, 0.2); }
    ._dark #_nav { background-color: rgba(0,0,0,0.2); }

    ._nav_layout {
      overflow-y: hidden;
      height: 1.5em;
    }

    ._header_layout {
      text-align: center;
      display: flex;
      flex-direction: column;
      padding-top: 10vh;
    }

    #_header .hero { font-size:1.6em; margin:31vh auto; width:10em; }
    #_header .hero2 { margin:2em 1em; max-width:640px; }

    @media only screen and (min-width: 540px) {
      #_header .hero { font-size:3em; }
      #_header .hero2 { margin:2em auto; }
    }

    ._fullscreen {
      position:relative;
      top: -3.7em;
      background-color: rgba(0,0,0,0.2);
    }

