        +fat|a
        +fat|txt
      
      p._text-right._small: +a('https://fontawesome.com/v6/search?q=')(target="fontawesome")._no-u More icons at Font-Awesome ...

      .g.demo.gridlines

        mixin fag(x)
          - var n = 0
          while n < x
            if(n%2==0)
              .io2
                +fas.fa-bars
                |H
            else
              .io1 &nbsp;
            - n++

        .u._text-1: +fag(13)
        .u._text-2: +fag(12)
        .u._text-3: +fag(11)
        .u._text-4: +fag(10)
        .u._text-5: +fag(9)
        .u._text-6: +fag(8)
        .u._text-7: +fag(7)

        .u._hero:   +fag(9)
        .u._hero-1: +fag(8)
        .u._hero-2: +fag(7)

