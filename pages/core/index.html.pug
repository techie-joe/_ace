extends _html

block append vars
  - heading = `Core`
  - about   = `Lets explore the main structure and features of our template.`
  - updateTitle( `${heading} | ${name}` )
  - updateDescription( `${about}` )
  - updateUrl( siteUrl+'index.html' )

block append style
  //- style.
  //- style.

block header

  include _nav
  +navbar(false)

  +header#_header
    +heading#_heading !{heading}
    p !{description}
    hr

block main

  +main#_main: article

    +nav._color_1._radius_x5r._clearfix._mv
      -
        temp = [
          ['basics.html','Basics'],
          ['texts.html','Texts'],
          ['icons.html','Icons'],
          ['links.html','Links'],
          ['buttons.html','Buttons'],
          ['colors.html','Colors'],
          ['containers.html','Containers'],
          ['flex.html','Flex'],
        ];
      each v in temp
        +a._link._l(href=v[0]) #{v[1]}

    +nav._color_1._radius_x5r._clearfix._mv
      -
        temp = [
          ['view.html','View'],
          ['layouts.html','Layouts'],
          ['alignment.html','Alignment'],
          ['overflow.html','Overflow'],
          ['menu.html','Menu'],
        ];
      each v in temp
        +a._link._l(href=v[0]) #{v[1]}

    +nav._color_1._radius_x5r._clearfix._mv
      -
        temp = [
          ['test.html','Test'],
          ['blank.html','Blank'],
          ['error.html','Error'],
          ['theme.html','Theme'],
        ];
      each v in temp
        +a._link._l(href=v[0]) #{v[1]}

    +nav._color_1._radius_x5r._clearfix._mv
      -
        temp = [
          [homeUri+'themejs/','ThemeJs'],
        ];
      each v in temp
        +a._link._l(href=v[0]) #{v[1]}

