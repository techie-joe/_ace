extends ../../core/_html

block append vars
  //- variables for every html page
  - layout = 'pages/core/html';
  include _vars

block append style
  style.
    #_nav ._link { color: inherit; padding: .15em .3em; }
    #_nav ._link:hover { outline: 1px solid #888; }
  //- style.

block header

  //- include _nav
  //- +nav#_nav: ul: +lia
  +nav#_nav
    +_a._link(href='index.html') Core
    +_a._link(href='basic.html') Basic
    hr

  +header#_header
    +heading#_heading !{heading}
    p !{about}
    hr

//- block main_header

block footer
  +footer#_footer
    p &copy; !{copyright}
