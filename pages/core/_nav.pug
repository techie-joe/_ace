mixin navmenu
  -
    temp = [
      ['index.html','Core'],
      ['basics.html','Basics'],
      ['texts.html','Texts'],
      ['icons.html','Icons'],
      ['links.html','Links'],
      ['buttons.html','Buttons'],
      ['containers.html','Containers'],
    ];
  each v in temp
    +a._link._l(href=v[0]) #{v[1]}

mixin navbar(INCLUDE_MENU = true)

  style.
    .flexmenu ._nav_layout { margin:0 }
    #_nav ._nav_layout { margin:0 }
    #navlogo {
      border: 0;
      padding: .25em 1em;
      border-radius: 0;
      margin: 0;
      line-height: 2;
      font-size: 1.2em;
      box-sizing: border-box;
      width: 100%;
    }

  //- style.

  +nav._color_1.flexmenu._no_print: ._flex

    ._f
      +a('../')#navlogo._btnlink
        b._tc_contra Ace
        b._tc_blue Template

    ._fill(style="flex-basis:20rem")
      if INCLUDE_MENU
        div(style="margin: .6rem .6rem"): +navmenu
          