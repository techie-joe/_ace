extends ../../core/_html

block append vars
  - heading = `Test page`
  - about   = `We keep brewing new styles from time to time.`
  - updateTitle( `${heading} | ${name}` )
  - updateDescription( `${about}` )
  - updateUrl( siteUrl+'test.html' )

block style
  +htmlPreset
  //- +cssv(href,media='all')
  +cssv(assetsUri+'css/core/html.css')#_style
  style.
  //- style.

block append widgets

  style.
    #topi { position:absolute;top:0;right:0;width:100% }
    #topi .abs {
      position:absolute;
      top:0;
      right:15px;
      padding:.6rem;
      font-size:0;
    }
    #topi .link i { font-style:normal }
    #topi .link {
      font-family:monospace,monospace;
      font-size:1.3rem;
      color:inherit;
      text-decoration:none;
      text-align:center;
      display:inline-block;
      box-sizing:border-box;
      width:1.5rem;
      height:1.5rem;
      margin:.1rem;
      border:1px solid #888;
      line-height:1;
      font-weight:normal;
      border-radius:.3rem;
    }
  //- style.

  #topi._no_print: .abs
    block styleSwitch
    +_a.link._c_base(onclick=onclick(js.themeChange) title="Change Theme (Ctrl+Alt+T)") &bull;

block styleSwitch
  +_a.link._c_base(onclick=onclick('window.test.disableStyle();') title="Toggle Style") s
  style.
    ._nav_layout { margin-right: 4.2rem }
  //- style.
  script.
    (()=>{
      var
      e = document.getElementById("_style"),
      m = e.getAttribute("media"),
      disableStyle = ()=>{ e.setAttribute("media",e.getAttribute("media")==='x'?m:'x') };
      window.test = { disableStyle };
    })();
  //- script.

block main

