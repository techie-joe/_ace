extends _html

block append vars
  - heading = `Menu`
  - about   = `There are many options of menus available for use.`
  - updateTitle( `${heading} | ${title}` )
  - updateDescription( `${about}` )
  - updateUrl( siteUrl+"menu.html" )
  - svgi.ellipsis = 'M16,12A2,2 0 0,1 18,10A2,2 0 0,1 20,12A2,2 0 0,1 18,14A2,2 0 0,1 16,12M10,12A2,2 0 0,1 12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12M4,12A2,2 0 0,1 6,10A2,2 0 0,1 8,12A2,2 0 0,1 6,14A2,2 0 0,1 4,12Z'; // ··· for menu
  include _logo

block append style
  style.

    ._view { overflow: auto }
    #menu1 a#_logo:hover { outline:none }
  //- style.

mixin samples
  p
    +_a('#menu_')._btnlink._l Menu
    +_a('#menu1')._btnlink._l Menu 1

block view
  ._views

    +view#menu_._full_view

      include _nav
      +navbar

      +header#_header
        +heading#_heading !{heading}
        p#_about !{description}
        hr

      +main#_main: article

        section: ._c_bg_1._radius_x5r: +nav._clearfix
          +a()._btnlink| Buttons
          +_a()._link| Links
          +_a()._link| Icons
          +_a()._link.__icon| &amp;
          +_a()._link.__icon| &bull;
          +_a()._link.__icon: +isvg(svgi.ellipsis)
          +_a()._link.__icon: +isvg(svgi.compare)
        //- section

        +samples

      //- main: article

      +footer#_footer
        hr
        p._small._system !{copyright}

    //- view#menu_

    +view#menu1._full_view

      mixin sampleMenu_1
        +_a()._link| Product
        +_a()._link| Services
        +_a()._link| Blog
        +_a()._link| Gallery
        +_a()._link| Contact

      section#_navbar._flex._c_bg_1
        ._f._text_center: +logo
        ._fill(style="flex-basis:20rem"): +nav(style="padding:0.75rem"): +sampleMenu_1
      //- section

      #view_1: ._main_layout: +samples

    //- view#menu1
