    ._layout { max-width:960px;margin:0 auto }
    #logo { width: 6.2rem; cursor: pointer; transition: background-color 0.5s; }
           #logo:hover { background:#ccc; transition: none; }
    ._dark #logo:hover { background:#333 }
    #logos { font-size: 3em }
    #tagline { padding-bottom: 0.4rem; letter-spacing: 0.05em; margin-top: -0.6em; }
  //- 

