mixin colorCodes(r)
  -
    var bg = colors[r][0];
    var tc = colors[r][1];
    var cbg = bg[ Math.ceil(bg.length/2)-1 ];
    var ctc = tc[ Math.ceil(tc.length/2)-1 ];
  .codecolor._mt-2._small(style=`background: #${cbg}; color:#${ctc}`) ##{cbg}
  .g
    .u-1-3: pre.colorcode._radius._pad._mh._mv-f1
      each v,i in bg
        = `.bg-${r+1}-${i+1} { background-color: #${v} }`
        +_
    .u-1-3: pre.colorcode._radius._pad._mv-f1
      each v,i in bg
        = `.bc-${r+1}-${i+1} { border-color: #${v} }`
        +_
    .u-1-3: pre.colorcode._radius._pad._mh._mv-f1
      each v,i in tc
        = `.tc-${r+1}-${i+1} { color: #${v} }`
        +_
    .u-1-2: pre.colorcode._radius._pad._mh._mv-f1
      each v,i in bg
        = `$bg-${r+1}-${i+1} : #${v};`
        +_
    .u-1-2: pre.colorcode._radius._pad._mr._mv-f1
      each v,i in tc
        = `$tc-${r+1}-${i+1} : #${v};`
        +_

