extends ../_templates/html

block append vars
  include _demo-vars
  include _color-functions
  -
    header      = `Theme`
    title       = `${header} | ${name}`
    description = `Theme for your reference.`
    url         = url+`/theme.html`

    og_title       = title
    og_description = description
    og_url         = url

    var primary_color   = 8; // blue 0066CC
    var secondary_color = 3; // orange DD8811

    var bg = colors[primary_color][0];
    var tc = colors[primary_color][1];
    var cbg = bg[ Math.ceil(bg.length/2)-1 ];
    var ctc = tc[ Math.ceil(tc.length/2)-1 ];

  //- 

block style
  +css(homeUrl+'assets/css/style.css?v='+version)
  +css(homeUrl+'assets/pure/grid.css?v='+version)
  style.
    ._layout #_header,
    ._layout #_footer,
    ._layout #_main
    { max-width:960px;margin:0 auto }
    #logo { width: 6.2rem; cursor: pointer; transition: background-color 0.5s; }
           #logo:hover { background:#ccc; transition: none; }
    ._dark #logo:hover { background:#333 }
    #logos { font-size: 3em }
    #tagline { padding-bottom: 0.4rem; letter-spacing: 0.05em; margin-top: -0.6em; }
    #logo ._color { color: ##{cbg} }
    
  //- 

block header
  header#_header
    .g._bg-1
      .u: #logo._m._text-center._numb()
        #logos._impact #[span._color LO]#[span._color-1 GO]
        | 
        #tagline._small._uppercase._b Your tagline
    hr._no-margin

