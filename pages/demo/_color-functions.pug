    , '0088AA'
    , '0066CC'
    , '2244DD'
    , '8822ee'
    , '992299'
    , 'CC0066'
    ];
  
  var colors = [
    [
      ['000000','111111','eeeeee','ffffff'],
      ['444444','5d5d5d','919191','aaaaaa']
    ],
    getColors('808080',-10),
  ];

  rainbow.forEach(function(v, i, a) {
    colors.push( getColors(v) );
  });

