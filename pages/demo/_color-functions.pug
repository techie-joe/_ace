    while c < cols
      - var bg = colors[r][0][c];
      - var tc = colors[r][1][c];
      .i(style=`background:#${bg};color:#${tc};`)
        .c(style=`border:1px solid #${tc}`) #[b #{bg}]#[br]#{tc}
      - c++;
