extends _html

block append vars
  - heading = `Menu`
  - updateTitle( `${heading} | ${title}` )
  - updateDescription( `This page shows multiple variations of navigation layout you can use.` )
  - updateUrl( url+"menu.html" )

block append style
  style.

    ._main_layout { max-width:none;padding:0; }

  //- style.

block main

  +main#_main: article

    section#t1._mb: ._flex: ._fill._nav_color: +nav#_nav
      span._nav_label| You can :
      +a()._btnlink._smaller| Combine
      +_a()._nav_item._nav_icon: +isvg(svgi.compare)
      +_a()._nav_item| All
      +_a()._nav_item| Sorts of
      +_a()._nav_item._nav_icon._b: +middots
      +_a()._nav_item| Menu
      +_a()._nav_item| Items
      +_a()._nav_item._nav_icon: +isvg(svgi.ellipsis)

    mixin sampleMenu_1
      +_a()._nav_item| Blog
      +_a()._nav_item| Articles
      +_a()._nav_item| Gallery
      +_a()._nav_item| Contact

    mixin sampleMenu_2
      +_a()._nav_item| Product
      +_a()._nav_item| Services
      +_a()._nav_item| About us
      +_a()._nav_item| Support

    section#t2._mv: ._flex
      ._f_12_1._pa._nav_color._text_center: +a()._btnlink._smaller|Home
      ._fill._nav_color(style="flex-basis:20rem"): +nav#_nav: +sampleMenu_1
      ._f_12_1._text_right._pa_x5r._nav_color: +_a()()._navChangeThemeLink._nav_item._nav_icon: +isvg(svgi.compare)

    section#t3._mv
      #_navbar._flex
        ._f_12_1._nav_color._text_center: include _logo
        ._fill._nav_color(style="flex-basis:20rem"): +nav#_nav: +sampleMenu_2
        ._f_12_1._text_right._pa_x5r._nav_color: +_a()._navChangeThemeLink._nav_item._nav_icon: +isvg(svgi.compare)
    
    //- section#t4._mv

      style.
        ._icons ._isvg { min-width:2.25em; height:2.25em; }

      #_navbar._flex
        ._f._icons: +isvg(svgi.bars)
        ._fill(style="min-width:10rem")
          +nav#_nav
            +menus
        ._f._icons
          +isvg(svgi.compare)
          +isvg(svgi.ellipsis)
