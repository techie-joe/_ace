extends _template

block append vars
  include _vars
  -
    header      = `Icons`
    url         = url+`icons.html`
    title       = `${header} | ${name}`
    description = `Visual elements like images, icons, and graphics add depth and interest to your theme.`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  +css(homeUrl+'assets/pure/grid.css?v='+version)
  +css('//cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css')
  style.
    .gridlines {
      min-height: 100px;
      padding-bottom: 1px;
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="1" height="12"><rect width="1" height="1" fill="%23A9790688" /></svg>');
      background-repeat: repeat;
    }
    .demo .u { margin: 0 2px; padding-bottom: 10px; }

    .io1  { background: #66668844; box-shadow:0 1px orange; }
    .io2  { background: #66886644; box-shadow:0 1px orange; }

  //- 
    ._itext { margin:2px; outline:1px solid #888; border-radius: .25rem; }

block main
  +main#_main: article

    section._mb-2

      h2._h3._sans Matched size
      p Match the size of icons with text.

      style.
        .mbox,
        .ibox {
          background:#0004;
          box-shadow:0 0 0 1px #440 inset;
          line-height:0;
          display:inline-block;
          padding-right:1em;
          vertical-align:top;
        }
        .mbox {
          font-size:1.5em;
        }
        .mbox i { min-width:1em;text-align:center; }

      ._p
        each t in ['※','⊕','+','≡','«']
          .mbox
            i.itext=t
            i.fas=t
            |H
          +_

    section._mb-2

      h2._h3._sans SVG Icons

      style.
        ._icons ._isvg { min-width:2.25em; height:2.25em; }

      -
        let svgs = [
          'M5,6H19V8H5V6M5,11H19V13H5V11M5,16H19V18H5V16Z',
          'M19,3H14V5H19V18L14,12V21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M10,18H5L10,12M10,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H10V23H12V1H10V3Z',
          'M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z',
          'M16,12A2,2 0 0,1 18,10A2,2 0 0,1 20,12A2,2 0 0,1 18,14A2,2 0 0,1 16,12M10,12A2,2 0 0,1 12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12M4,12A2,2 0 0,1 6,10A2,2 0 0,1 8,12A2,2 0 0,1 6,14A2,2 0 0,1 4,12Z',
          'M10,17L15,12L10,7V17Z',
          'M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z',
          'M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z',
          'M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z',
          'M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z',
