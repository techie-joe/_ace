          'M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z',
        ];

      ._mv._icons
        each d in svgs
          i._isvg: +isvg(d)

      ._mv
        .ibox
          i._isvg: +isvg(svgs[0])
          i._isvg: +isvg(svgs[1])
          |H

      ._mv
        - let i = 0
        while 8 >= i++
          i._isvg(class="_rotate-"+(-45+i*45)): +isvg(svgs[5])
        i._isvg.__spin: +isvg(svgs[7])
        i._isvg.__spin: +isvg(svgs[8])

    section._mb-2

      h2._h3._sans Text Icons

