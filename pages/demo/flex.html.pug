extends _template

block append vars
  include _vars
  -
    header      = `Flex`
    url         = url+`flex.html`
    title       = `${header} | ${name}`
    description = `${header} are used to arrange and align contents.`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  +css(homeUrl+'assets/css/grid.css?v='+version)
  style.
    .o { height:3em; font-size:.8em; font-weight:bold; box-shadow: 0 0 0 1px #f804 inset; padding:2px 5px; }
    .o:hover { background-color: #8886 }

  //-

block main
  +main#_main: article.layout

    mixin gen_grid(k)
      - var k2 = Math.floor(k/2);
      - var n = 0;
      while n < k2
        ._flex
          div(class=`_${k}-${n+1}`): .o _#{k}-#{n+1}
          div(class=`_${k}-${k-n-1}`): .o _#{k}-#{k-n-1}
        - n++;

    ._mv: ._flex: ._1: .o _1

    ._mv: +gen_grid(2)

    ._mv
      +gen_grid(3)
      ._flex: +repeat(3):  ._3-1: .o _3-1

    ._mv
      +gen_grid(4)
      ._flex: +repeat(4):  ._4-1: .o _4-1
      ._flex: +repeat(2):  ._2-1: .o._orange _2-1

    ._mv
      +gen_grid(5)
      ._flex: +repeat(5):  ._5-1: .o _5-1

    ._mv
      +gen_grid(6)
      ._flex: +repeat(6):  ._6-1: .o _6-1
      ._flex: +repeat(3):  ._3-1: .o._orange _3-1
      ._flex: +repeat(2):  ._2-1: .o._orange _2-1

    //- ._mv
    //-   +gen_grid(8)
    //-   ._flex: +repeat(8):  ._8-1: .o _8-1
    //-   ._flex: +repeat(4):  ._4-1: .o._orange _4-1
    //-   ._flex: +repeat(2):  ._2-1: .o._orange _2-1

    ._mv
      +gen_grid(10)
      ._flex: +repeat(5):  ._10-2: .o _10-2
      ._flex: +repeat(10): ._10-1: .o _10-1
      ._flex: +repeat(5):  ._5-1: .o._orange _5-1
      ._flex: +repeat(2):  ._2-1: .o._orange _2-1

    ._mv
      +gen_grid(12)
      ._flex: +repeat(3):  ._12-4: .o _12-4
      ._flex: +repeat(4):  ._12-3: .o _12-3
      ._flex: +repeat(6):  ._12-2: .o _12-2
      ._flex: +repeat(12): ._12-1: .o _12-1
      ._flex: +repeat(6):  ._6-1: .o._orange _6-1
      ._flex: +repeat(4):  ._4-1: .o._orange _4-1
      ._flex: +repeat(3):  ._3-1: .o._orange _3-1
      ._flex: +repeat(2):  ._2-1: .o._orange _2-1

    //- ._mv
      +gen_grid(16)
      ._flex: +repeat(4):  ._16-4: .o _16-4
      ._flex: +repeat(8):  ._16-2: .o _16-2
      ._flex: +repeat(16): ._16-1: .o _16-1
