extends ../_templates/html

block append vars
  include _demo-vars
  -
    title       = `${name}`
    header      = `${name}`
    description = `A solid foundation to start building your website and application. Our minimalistic approach ensures full control from the very beginning.`

    og_title       = title
    og_description = description
  //- 

block append style
  +css(homeUrl+'assets/css/demo.css?v='+version)
  //- 
    /*
      | |
    01234567
    fedcba98
      | |
    */
  style.
    #_main { margin-top:0; }
    #_html .pages    { margin:1.5em 0 3em 0; }
    #_html .pages  a { text-decoration:none; padding:0.2em 0.3em; border-radius:5px; cursor:pointer; white-space: nowrap }
    #_html .pages .a { padding:0.2em 0.3em; font-weight:bold; }

    #_html       .pages a       { color:inherit; }
    #_html       .pages a:hover { background:#bbb; color:#000; }
    #_html._dark .pages a:hover { background:#444; color:#fff; }

    #_header    { position:relative; padding:3em 4em; margin-bottom:2em; }
    #_header .p { max-width: 550px; }
    #_header h1 { max-width:13.5em; }
    #_header .startNow ._btnlink:hover { background:#777;color:#fff; }

    #_header    { color: #333; background: #ccc; }
    #_header h1 { color: #000; }

    ._dark #_header    { color: #aaa; background: #111; }
    ._dark #_header h1 { color: #fff; }


    #_html .layout { margin:2em 4em; }

    @media only screen and (max-width: 499px) {
      #_main { margin:0; }
      #_html .layout { margin:2em 1em; }
      #_header { padding:3em 1em; margin:0; }
      #_html .pages ul {
        list-style-type: none;
        padding-inline-start: 0;
      }
    }

    @media only screen and (min-width: 600px) {
      #_html .startNow {
        display:block;
        float:right;
        text-align:right;
        width:120px;
        height:109px;
        padding:2em 3em;
        position: absolute;
        top: 0;
        right: 0;
        margin: 1em;
      }
    }
  //-

block nav

block main
  main#_main

    header#_header
      .p
        h1 !{header}
        p !{description}
      .startNow
        +a("blank-canvas.html")#startNow._btnlink| Start Now
    //- 

    article.layout

      h2 Available in light and dark

      p Use #[code._code='Ctrl + Alt + T'] or #[code._code='base.theme.change()'] to swap between light and dark.

      p: +a()(onclick="base.theme.change()")._btnlink._small Change Theme

      ._mv &nbsp;

      h2 Quick start templates

      nav.pages: .g
        .u-1-2
          ul
            +la('blank-canvas.html')| Blank Canvas
            +la('full-screen.html')| Full Screen
            +la('split-screen.html')| Split Screen
        .u-1-2
          ul
            +la('full-grid.html')| Full Grid
            +la('classic-page.html')| Classic Page
            +la('classic-list.html')| Classic List
        .u-1
          ul: li
            span.a Error pages :
            +a("---","Simulate Real 404")| ---
            +a("404.html")| 404
            +a("500.html")| 500
            +a("503.html")| 503

      h2 Pre-made building components
      
      p Our web builder is equipped with helpers and pre-made building components, ensuring an intuitive and easy building experience. We simplify web creation and makes it accessible even for those who may not have technical expertise. No lengthy manual or confusing rules -- just dive in and start building. And for those who are curious or need a bit more guidance, we have comprehensive demos and articles to help you out.

      nav.pages
        +_a("views.html")| Views
        +_a("layout.html")| Layout
        +_a("grid.html")| Grid
        +_a("colors.html")| Colors
        +_a("containers.html")| Containers
        +_a("texts.html")| Texts
        +_a("fonticons.html")| Fonticons
        +_a("images.html")| Image
        +_a("video.html")| Video
        +_a("buttons.html")| Buttons
        +_a("background.html")| Background
        +_a("form.html")| Form
        +_a("transitions.html")| Transitions
        +_a("animations.html")| Animations
        +_a("menu.html")| Menu
        +_a("popups.html")| Popups
        +_a("dialogs.html")| Dialogs
        +_a("theme.html")| Theme
        +_a("helpers.html")| Helpers

    p: hr
    footer#_footer
      .layout: p._text-left| !{copyright}
