extends _html

block append vars
  - heading = `Ace Template`
  - about   = `A solid foundation to build upon your website and application. Our simple approach lets you build with confidence.`
  - updateTitle( heading )
  - svgi.print = 'M18,3H6V7H18M19,12A1,1 0 0,1 18,11A1,1 0 0,1 19,10A1,1 0 0,1 20,11A1,1 0 0,1 19,12M16,19H8V14H16M19,8H5A3,3 0 0,0 2,11V17H6V21H18V17H22V11A3,3 0 0,0 19,8Z' // printer

block append style
  +cssv(assetsUrl+'css/style.css')
  style.
    #_header ._header_layout { padding: 2rem 3rem; margin-top:0; }
    @media (max-width: 530px) {
    #_header ._header_layout { padding: 3rem 1rem 2rem; }
    }

    #_header ._header_layout { position:relative }
    #_header ._header_layout:before {
      content: 'A';
      font-family: serif;
      font-weight: bold;
      font-size: 45rem;
      display: block;
      line-height: 0.7;
      position: absolute;
      top: -50%;
      right: 4%;
      opacity: 0.1;
      user-select: none;
    }
    #_main,
    #intro { position:relative; z-index:1 }

    #intro { max-width: 28em; }

    #intro ._hero_1 span { line-height:1 }

    #topi { position: absolute; top: 3.3rem; right: 5rem; }
    #topi ._isvg { height: 2.5em; min-width: 2.5em; }
    @media (max-width: 530px) {
    #topi { top: 1rem; right: 1rem; }
    #topi ._isvg { height: 1.5em; min-width: 1.5em; }
    }
    #topi ._link { padding:.5em }

    html   #_header { background: #ccc; }
    ._dark #_header { background: #111; }

    html   #_header h1 { color: #000; }
    ._dark #_header h1 { color: #fff; }

    #_html .pages ul { list-style-type: none; padding-inline-start: 0; }

block header
  +header#_header
    #intro
      h1._hero_2 #[span.t1 Ace] #[span.t2._tc_primary Template]
      p._smaller._system by #[+a(authorUrl)(target="page_author")._stay_fresh !{author}]
      p._text_justify !{about}
    #topi._no_print
      +changeThemeLink._link._nav_icon._hover_scale: +isvg(svgi.compare)

block main
  +main#_main: article

    include demo/_nav

    section._mv_2

      p._text_justify This template is equipped with #[b._h7 pre-made components] and #[b._h7 helper classes] to give you an easy building experience. We have simplified web creation to make it accessible to everyone, even for those who may not have technical expertise. Dive in and start building your website straight away.

      ._mv._nav_color._radius_x5r: +nav#_nav
        b._nav_label._system| Template Components : &nbsp;
        +menu

    hr

    section._mv_2
      h2 Website Samples

      mixin lia_sample_1(ref='')
        +lia("/ace/sample_1/"+ref)._link: block

      nav.pages: ._flex
        ._f_12_2
          ul._no_margin
            +lia_sample_1()| Sample #1 - Simple Home

    mixin lia_template(ref='')
      +lia(templateUrl+ref)._link: block

    section._mv_2
      h2 Starter Templates
      nav.pages
        ._flex
          ._f_12_4
            ul._no_margin
              +lia_template("index.html")| Home Page
              +lia_template("starter.html")| Starter Page
              +lia_template('full_screen.html')| Full Screen
              +lia_template('split_screen.html')| Split Screen
          ._f_12_4
            ul._no_margin
              +lia_template('flex_gallery.html')| Flex Gallery
              +lia_template('classic_page.html')| Classic Page
              +lia_template('classic_list.html')| Classic List

    section._mv_2
      h2 Basic Templates
      nav.pages
        ._flex
          ._f_12_4
            ul._no_margin
              +lia("coming_soon.html","Quickly setup a page to go live real soon.")._link| Coming soon
              +lia("closed.html","When you decide to temporarily close your website.")._link| Temporary closed
          ._f_12_4
            ul._no_margin
              li
                +a("404.html","When a browser lands on a missing page.")._link| 404 -- Not found
                +_a("---","Simulate Real 404")._link._nav_icon._no_print: +middots
              +lia("500.html","When your server encounters an error.")._link| 500 -- Oops!
          ._f_12_4
            ul._no_margin
              +lia("blank.html","Just a blank page to start building.")._link| Blank Page

    hr

    ._flex._gap_2

      ._f_2_1
        section._mb_2
          h2 Available in light and dark

          p._text_justify Our template is readily available in both light and dark color preference. You can easily switch between the two by using the keyboard shortcut #[code._code._no_wrap='Ctrl + Alt + T'] or use a button or script to programatically execute #[code._code._no_wrap='base.theme.change()'].

          p._no_print: +changeThemeLink._btnlink._small #[+isvg(svgi.compare)] #[span._btnlabel._btnpad Change Theme]

      ._f_2_1
        section._mb_2
          h2 Good design, even in print
          p._text_justify You'll want a website that looks great when printed. Our templates excel on paper. Enjoy good design and functionality, viewed digitally or in print. Elevate your professionalism with templates that stand out in every medium.

          p._no_print: +a()(onclick='window.print();')._btnlink._small #[+isvg(svgi.print)] #[span._btnlabel._btnpad Print Page]

    //- flex

    hr

block footer
  +footer#_footer
    ._pa._nav_color._radius_x5r

      p._small._mono._m0
        +a(url)._link._b|LIVE
        ||
        +a(localUrl)._link._b|LOCAL
        ||
        +a(sourceUrl)(target="page_source")._link._b|SOURCE

      p._smaller._mono| Version: #{version} - #[span._no_wrap b#{build}]

      div._p._smaller._mb0
        div
          | Some images and resources you find here may originate from eligible outside sources.
          | • Few #[b._tc_contra may not be included] in the distributed packages due to the terms of the original author. You'll be provided with references to get them directly from the author.
          | • Our special thanks goes to Matt at #[a._no_color(href="https://www.svgbackgrounds.com/set/free-svg-backgrounds-and-patterns/") svgbackgrounds.com] for providing us with free SVG images.

    hr
    p._small._system !{copyright}
