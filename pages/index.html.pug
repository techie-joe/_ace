extends ../_templates/demo

block append vars
  include _demo-vars
  -
    title       = `${name}`
    header      = `${name}`
    description = `A solid foundation to start building your website and application. Our minimalistic approach ensures full control from the very beginning.`

    og_title       = title
    og_description = description
  //- 

block append style
  style.

    #_html { min-width:320px }

    #_footer .layout,
    #_main .layout   { padding: 0; }
    #_header .layout { padding: 1rem 1rem 2rem; }

    #_header { padding: 1px 0; }

    #_header    { color: #333; background: #ccc; }
    #_header h1 { color: #000; }

    ._dark #_header    { color: #aaa; background: #111; }
    ._dark #_header h1 { color: #fff; }

    #_html .pages    { margin:1.5em 0 3em 0; }
    #_html .pages  a { text-decoration:none; padding:0.2em 0.3em; border-radius:5px; cursor:pointer; white-space: nowrap }
    #_html .pages .a { padding:0.2em 0.3em; font-weight:bold; }
    #_html       .pages a       { color:inherit; }
    #_html       .pages a:hover { background:#bbb; color:#000; }
    #_html._dark .pages a:hover { background:#444; color:#fff; }

    #_html .pages ul { list-style-type: none; padding-inline-start: 0; }

    #_header    { position:relative; }
    #_header .p { max-width: 490px; }

    #_header .startNow { text-align: center; width:100%; margin: 1.5em auto 0; }
    #_header .startNow ._btnlink:hover { background:#777;color:#fff; }

    @media screen and (min-width: 530px) {

      #_footer .layout,
      #_main .layout   { padding: 0 3rem; }
      #_header .layout { padding: 1rem 4rem 3rem; }

      #_html .startNow {
        display: block;
        float: right;
        text-align: right;
        width: 120px;
        position: absolute;
        top: 2em;
        right: 2em;
        margin: 1em;
      }

    }

    @media screen and (min-width: 960px) {
      
      #_header         { max-width: none; }
      #_header .layout { max-width: 860px; margin: 0 auto; padding: 1rem 3rem 3rem; position:relative; }

    }

