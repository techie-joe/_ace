extends _html

block append vars
  - heading = `Ace Template`
  - about   = `${description}. Our simple approach lets you build with confidence.`
  - updateTitle( `${heading} by ${author}` )
  - svgi.print = 'M18,3H6V7H18M19,12A1,1 0 0,1 18,11A1,1 0 0,1 19,10A1,1 0 0,1 20,11A1,1 0 0,1 19,12M16,19H8V14H16M19,8H5A3,3 0 0,0 2,11V17H6V21H18V17H22V11A3,3 0 0,0 19,8Z'; // printer

block append style
  +cssv(assetsUrl+'gcss/style.css')
  style.
    #_header ._header_layout { padding: 2rem 3rem; margin-top:0; }
    @media (max-width: 530px) {
    #_header ._header_layout { padding: 3rem 1rem 2rem; }
    }

    #_header ._header_layout { position:relative }
    #_header ._header_layout:before {
      content: 'A';
      font-family: serif;
      font-weight: bold;
      font-size: 45rem;
      display: block;
      line-height: 0.7;
      position: absolute;
      top: -50%;
      right: 4%;
      opacity: 0.1;
      user-select: none;
    }
    #_main,
    #intro { position:relative; z-index:1 }

    #intro { max-width: 25em; }

    #intro ._hero_1 span { line-height:1 }

    #topi { position: absolute; top: 3.3rem; right: 5rem; }
    #topi ._isvg { height: 2.5em; min-width: 2.5em; }
    @media (max-width: 530px) {
    #topi { top: 1rem; right: 1rem; }
    #topi ._isvg { height: 1.5em; min-width: 1.5em; }
    }
    #topi ._link { padding:.5em }

    html   #_header { background: #ccc; }
    ._dark #_header { background: #111; }

    html   #_header h1 { color: #000; }
    ._dark #_header h1 { color: #fff; }

    #_html .pages ul { list-style-type: none; padding-inline-start: 0; }

    #_html       .download { background-color: #1b36b0; color:#fff; border-color: #3046a8; }
    #_html._dark .download { background-color: #7a8eea; color:#000; border-color: #5f72c5; }
    .download, .viewdemo { min-width: 6em; margin: .5em .3em; }

block header
  +header#_header
    #intro
      h1._hero_2 #[span.t1 Ace] #[span.t2._tc_primary Template]
      p._smaller._system by #[+a(authorUrl)(target="page_author")._stay_fresh !{author}]
      p._text_justify !{about}
    #topi._no_print._needjs
      +changeThemeLink._link._nav_icon._hover_scale: +isvg(svgi.compare)

block main
  +main#_main: article

    section._mv_2

      p._text_justify(style="min-height:5rem") This template comes with #[b._h7 pre-made components] and #[b._h7 helper classes], giving you an easy building experience. We have simplified web creation to make it accessible to everyone, even those without technical expertise. Dive in and start building your website right away. With a variety of customization options, you can create a professional and unique website tailored to your needs.

      ._mv._nav_color._radius_x5r._pa_x5r._ph
        +a('','Get the template')(onclick=onclick())._btnlink.download #[span._btnlabel Download]
        +a(demoUrl,'Explore demo')._btnlink.viewdemo #[span._btnlabel Explore]

    hr

    section._mv_2
      h2 Website Samples

      mixin lia_sample_1(ref='')
        +lia("/ace/sample_1/"+ref)._link: block

      nav.pages: ._flex
        ._f_12_2
          ul._no_margin
            +lia_sample_1()| Sample #1 - Simple Home

    mixin lia_basic(ref='')
      +lia(basicUrl+ref)._link: block

    section._mv_2
      h2 Basic Templates
      nav.pages
        ._flex
          ._f_12_4
            ul._no_margin
              +lia_basic("index.html")| Home Page
              +lia_basic('full_screen.html')| Full Screen
              +lia_basic('split_screen.html')| Split Screen
              +lia_basic('flex_gallery.html')| Flex Gallery
              +lia_basic('classic_page.html')| Classic Page
              +lia_basic('classic_list.html')| Classic List
          ._f_12_4
            ul._no_margin
              +lia_basic("starter.html")| Starter Page
              +lia_basic("coming_soon.html","Quickly setup a page to go live real soon.")._link| Coming soon
              +lia_basic("closed.html","When you decide to temporarily close your website.")._link| Temporary closed
          ._f_12_4
            ul._no_margin
              li
                +a(basicUrl+"404.html","When a browser lands on a missing page.")._link| 404 -- Not found
                +_a("---","Simulate Real 404")._link._nav_icon._no_print: +middots
              +lia_basic("500.html","When your server encounters an error.")._link| 500 -- Oops!
              +lia_basic("blank.html","Just a blank page to start building.")._link| Blank Page

    hr

    ._flex._gap_2

      ._f_2_1
        section._mb_2
          h2 Available in light and dark

          p._text_justify This template is readily available in both light and dark color schemes. You can easily switch between the two by using the keyboard shortcut #[code._code._no_wrap='Ctrl + Alt + T']. You may also use a button or a script to programmatically execute #[code._code._no_wrap='base.theme.change()'].

          p._no_print._needjs: +changeThemeLink._btnlink #[+isvg(svgi.compare)] #[span._btnlabel Change Theme]

      ._f_2_1
        section._mb_2
          h2 Good design, even in print
          p._text_justify You will want a website that looks great when printed. This template excel on paper. Enjoy good design and functionality, viewed digitally or in print. Elevate your professionalism with a template that stand out in every medium.

          p._no_print._needjs: +a()(onclick=onclick(js.print))._btnlink #[+isvg(svgi.print)] #[span._btnlabel Print Page]

    //- flex

    hr

block footer
  +footer#_footer
    ._pa._nav_color._radius_x5r

      ._flex._gap
        ._f_fit
          p._small._mono(style="margin:0 -.3em;")
            +a(siteUrl)._link._b|LIVE
            ||
            +a(localUrl)._link._b|LOCAL
            if PROJECT_STATUS === DEVELOPMENT
              span#sourceref

          p._smaller._mono| Version: #{version} - #[span._no_wrap b#{build}]

        ._f_12_4
          div._smaller._text_justify
            | Some part of this site may come from external sources. Those files #[b._tc_contra may not be included] in the distributed packages of this template due to the original author's terms. References to obtain them directly from the author will be provided.
            | #[span._no_wrap â€¢ Thanks to] Matt at #[a._no_color(href="https://www.svgbackgrounds.com/set/free-svg-backgrounds-and-patterns/") SVGBackgrounds] for free SVG images.

    hr
    p._small._system !{copyright}

block append script
  +needjs
  script.
    (function(){ if( sourceref && window.location.hostname === '#{LOCALHOST}' ) {
      sourceref.innerHTML = [
        '|<a class="_link _b" href="#{sourceUrl}" target="page_source">SOURCE</a>',
        '|<a class="_link _b" href="#{builderUrl}" target="page_builder">BUILDER</a>',
      ].join('');
    }})();