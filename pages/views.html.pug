extends ../_templates/html

block append vars
  include _demo-vars
  -
    header      = `Views`
    title       = `${header} | ${name}`
    description = `View controls how page behave.`
    url         = url+`/views.html`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  style.

    #_widget ._layout {
      position: absolute;
      display: table;
      width: 100%;
      height: 100%;
      margin:0;
      text-align: center;
      z-index:1000;
    }
    
    #_nav {
      display: table-cell;
      vertical-align: middle;
      margin: 0 auto;
      padding: 1rem;
    }

    ._layout h1 { text-align: center }

    ._view { box-shadow: 0 3px red inset; }

  //- 

