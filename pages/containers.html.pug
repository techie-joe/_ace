extends ../_templates/demo

block append vars
  include _demo-vars
  -
    header      = `Containers`
    url         = url+`/containers.html`
    title       = `${header} | ${name}`
    description = `${header} are used to group contents together.`

    og_title       = title
    og_description = description
    og_url         = url
  //- 

block append style
  style.

    #_footer,
    #_header,
    #_main { max-width:none }
    #_main { padding:0 }

    .o { height:5rem; margin:1px }

    ._grid { max-width:60em }

  //- 

block main
  main#_main: article._grid.layout
    ._1: .o

    +repeat(2):  ._10-5: .o
    +repeat(5):  ._10-2: .o
    +repeat(10): ._10-1: .o

    +repeat(2):  ._12-6: .o
    +repeat(3):  ._12-4: .o
    +repeat(4):  ._12-3: .o
    +repeat(6):  ._12-2: .o
    +repeat(12): ._12-1: .o

    +repeat(2):  ._16-8: .o
    +repeat(4):  ._16-4: .o
    +repeat(8):  ._16-2: .o
    +repeat(16): ._16-1: .o
