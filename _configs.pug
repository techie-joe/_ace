//- __TLDR: Site configuration defaults.
//- Defaults will be overriden by pages as necessary.
//- =================================================================
-
  //- project data
  let version        = '0.1.24' // please update package.json too
  let build          = '322.8' // check README to verify changes

  let title          = '(untitled)'
  let description    = '(undescribed)'

  let heading        = '(untitled)'
  let about          = '(undescribed)'

  let brandName      = '(unknown)'
  let codeName       = '(unknown)'
  let author         = '(unknown)'
  let publisher      = 'Tidloo'

  //- urls
  let siteUrl        = 'https://techie-joe.github.io/ace/'
  let sourceUrl      = 'https://github.com/techie-joe/ace/'
  let builderUrl     = 'https://github.com/techie-joe/_ace/'
  let authorUrl      = 'https://github.com/techie-joe/'
  let localUrl       = 'http://localhost/ace/'

  let homeUrl        = '/ace/'
  let assetsUrl      = '/ace/assets/'
  let demoUrl        = '/ace/demo/'
  let basicUrl       = '/ace/basic/'

  let templateUrl    = '/ace/templates/' // deprecated

  //- open graph metadata for social media sharing
  let og_title       = title
  let og_description = description
  let og_url         = siteUrl + '?utm_source=homescreen'
  let og_type        = 'website'
  let og_image       = ''
  let og_imageAlt    = ''

  //- en or en-US following the BCP 47 language tag standard
  let lang           = 'en'
  let charset        = 'utf-8'

  //- styling
  let colorScheme    = 'light dark'
  let themeColor     = '#222222'
  let htmlClass      = ''
  let bodyClass      = ''
  let contentsClass  = ''

  //- metadata
  let now            = new Date()
  let thisYear       = now.getFullYear()
  let copyright      = `&copy; Copyright ${thisYear} ${publisher}`

  //- progressive web app metadata
  let INCLUDE_MANIFEST = false

  //- project
  const LOCALHOST      = 'localhost';
  const DEVELOPMENT    = 'DEVELOPMENT';
  const PRODUCTION     = 'PRODUCTION'
  const PROJECT_STATUS = DEVELOPMENT;

//- =================================================================
//- data update functions
-
  function updateTitle( _title ){
    title    = _title
    og_title = _title
  }

  function updateDescription( _description ){
    description    = _description
    og_description = _description
  }

  function updateUrl( _value, _type='website' ){
    siteUrl = _value
    og_url  = _value + '?utm_source=homescreen'
    og_type = _type
  }

  function updateImage( _image, _alt ){
    og_image    = _image
    og_imageAlt = _alt
  }

//- =================================================================
//- data mixins

mixin putDataTitle
  +l
  +join([
    `title            = ${title}`,
    `description      = ${description}`,
    ``,
    `heading          = ${heading}`,
    `about            = ${about}`,
    ``,
    `brandName        = ${brandName}`,
    `codeName         = ${codeName}`,
    `author           = ${author}`,
    `publisher        = ${publisher}`,
    ``,
    `version          = ${version}`,
    `build            = ${build}`,
    `now              = ${now}`,
  ])
  +l

mixin putDataOg
  +l
  +join([
    `og_title         = ${og_title}`,
    `og_description   = ${og_description}`,
    `og_type          = ${og_type}`,
    `og_url           = ${og_url}`,
    `og_image         = ${og_image}`,
    `og_imageAlt      = ${og_imageAlt}`,
  ])
  +l

mixin putDataUrl
  +l
  +join([
    `siteUrl          = ${siteUrl}`,
    `authorUrl        = ${authorUrl}`,
  ])
  +l

mixin putData
  +putDataTitle
  +putDataOg
  +putDataUrl
