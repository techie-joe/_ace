//- __TLDR: Site configuration defaults.
//- Defaults will be overriden by pages as necessary.
//- =================================================================
-
  //- project data
  let version        = '0.1.24' // please update package.json too
  let build          = '218.189.3' // check README to verify changes

  let title          = '(untitled)'
  let description    = '(undescribed)'

  let heading        = '(untitled)'
  let about          = '(undescribed)'

  let brandName      = '(unknown)'
  let codeName       = '(unknown)'
  let author         = '(unknown)'
  let publisher      = 'Tidloo'

  let homeUrl        = '/ace/'
  let assetsUrl      = '/ace/assets/'

  let demoUrl        = '/ace/demo/';
  let templateUrl    = '/ace/templates/';

  let url            = 'https://techie-joe.github.io/ace/'
  let authorUrl      = 'https://techie-joe.github.io/'
  let sourceUrl      = 'https://github.com/techie-joe/ace'
  let localUrl       = 'http://localhost/ace'

  // en or en-US following the BCP 47 language tag standard
  let lang           = 'en'
  let charset        = 'utf-8'

  //- styling
  let colorScheme    = 'light dark'
  let themeColor     = '#222222'
  let htmlClass      = ''
  let bodyClass      = ''
  let contentsClass  = ''

  //- progressive web app metadata
  let include_manifest = false

  let now            = new Date()
  let thisYear       = now.getFullYear()
  let copyright      = `&copy; Copyright ${thisYear} ${publisher}`

  //- open graph metadata for social media sharing

  let og_title       = title
  let og_description = description
  let og_url         = url+'?utm_source=homescreen'
  let og_type        = 'website'
  let og_image       = ''
  let og_imageAlt    = ''

//- =================================================================
//- data update functions
-
  function updateTitle( _title ){
    title    = _title
    og_title = _title
  }

  function updateDescription( _description ){
    description    = _description
    og_description = _description
  }

  function updateUrl( _value, _type='website' ){
       url  = _value
    og_url  = _value+'?utm_source=homescreen'
    og_type = _type
  }

  function updateImage( _image, _alt ){
    og_image    = _image
    og_imageAlt = _alt
  }

//- =================================================================
//- data mixins

mixin putDataTitle
  +l
  +join([
    `title            = ${title}`,
    `description      = ${description}`,
    ``,
    `heading          = ${heading}`,
    `about            = ${about}`,
    ``,
    `brandName        = ${brandName}`,
    `codeName         = ${codeName}`,
    `author           = ${author}`,
    `publisher        = ${publisher}`,
    ``,
    `version          = ${version}`,
    `build            = ${build}`,
    `now              = ${now}`,
  ])
  +l

mixin putDataOg
  +l
  +join([
    `og_title       = ${og_title}`,
    `og_description = ${og_description}`,
    `og_type        = ${og_type}`,
    `og_url         = ${og_url}`,
    `og_image       = ${og_image}`,
    `og_imageAlt    = ${og_imageAlt}`,
  ])
  +l

mixin putDataUrl
  +l
  +join([
    `url            = ${url}`,
    `authorUrl      = ${authorUrl}`,
  ])
  +l

mixin putData
  +putDataTitle
  +putDataOg
  +putDataUrl
