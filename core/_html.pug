include _vars

block vars
  //- variables for every html page
  - layout = 'core/html';

block document
  doctype html
  html#_html(lang=lang class=htmlClass)._nojs._scrollbar._a
    |
    | <!-- #{name} v#{version} b#{build.substring(0,build.indexOf('.')||build.length)} | (c) #{copyright} -->
    | <!-- layout:#{layout} -->
    |
    head
      meta(charset=charset)/

      block seo
        include _seo

      block meta
        include _meta

      block style
        //- +cssv(href,media='all')
        +cssv(assetsUri+'css/core/html.css')

    //- head

    body#_body(class=bodyClass)
    
      block views
        block view
          +view

            block header
              +header#_header
                +heading#_heading

            block nav
              //- include _nav
              //- +nav#_nav: ul: +lia
              +nav#_nav: +backlink._link #[+itext|‚Üê]#[span._btnlabel Back]

            block main
              //- +main#_main: article._ma
                +pre: +putData
                +pageData#_pageData
              +main#_main: article._ma
                hr
                h1._h7 !{title}
                p !{description}
                hr
                +pageData#_pageData
                hr

            block footer
              //- +footer#_footer

            block asides
              //- +aside#_aside

        //- block view
      //- block views

      block widgets
        //- +widgets#_widgets
          +widget#_widget

      block script
        //- +jsv(src)
        +jsv(assetsUri+'js/theme_v1.0.js')(defer)

        if INCLUDE_SERVICE_WORKERS
          +jsv(assetsUri+'js/sw.j')(defer)

      block last
        |
        | <!-- IE needs 512+ bytes: https://techie-joe.github.io/library/html5/ie#ie-needs-512-bytes -->
        |

    //- body

  //- html

//- document