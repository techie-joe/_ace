//- ==============================================================
//- page data mixins
//- ==============================================================

mixin pageData
  ._scrollable._full_width._text_left&attributes(attributes): +pre: +putData

mixin putData
  +l
  +join([
    `title            = ${title}`,
    `description      = ${description}`,
    ``,
    `heading          = ${heading}`,
    `about            = ${about}`,
    ``,
    `layout           = ${layout}`,
    `filename         = ${filename}`,
    `siteUrl          = ${siteUrl}`,
    ``,
    `og_url           = ${og_url}`,
    `og_type          = ${og_type}`,
    `og_title         = ${og_title}`,
    `og_description   = ${og_description}`,
    `og_image         = ${og_image}`,
    `og_imageAlt      = ${og_imageAlt}`,
    ``,
    `homeUri          = ${homeUri}`,
    `assetsUri        = ${assetsUri}`,
    ``,
    `name             = ${name}`,
    `version          = ${version}`,
    `build            = ${build}`,
    ``,
    `author           = ${author}`,
    `publisher        = ${publisher}`,
  ])
  +l

//- ==============================================================
//- Update functions
//- ==============================================================
-
  function updateTitle( _title ){
    title    = _title
    og_title = _title
  }

  function updateDescription( _description ){
    description    = _description
    og_description = _description
  }

  function updateUrl( _url='', _type='website' ){
    siteUrl = _url
    og_url  = _url? _url + '?utm_source=homescreen' : '';
    og_type = _type
  }

  function updateImage( _uri, _alt ){
    og_image    = _uri
    og_imageAlt = _alt
  }

